{
	"compilerOptions": {
		"composite": true,

		"module": "commonjs",
		"target": "es5",
		"moduleResolution": "node",
		"lib": [ "es5", "es6", "dom" ],

		"strict": true,

		"resolveJsonModule": true,
		"declarationMap": true,
		"esModuleInterop": true
	},

	"include": [
		"package.json"
	],

	"exclude": [
		"**/*.spec.ts"
	]
}